{% extends "Rap2hCookingBundle::layout.html.twig" %}

{% block title %}{{ parent() }} - Index{% endblock %}

{% block body %}
<h1>Ma recette</h1>
<p>
    {% if recipeSteps %}
        <ul class="list-group">
            {% for item in recipeSteps %}
                <li class="list-group-item active">{{ item.text }}<span class="badge">{{loop.index}}</span></li>
            {% endfor %}
        </ul>
    {% endif %}
</p>
{% if availableRecipeSteps %}
    <p class="text-muted">Choisis ce que tu veux ajouter</p>
    <div class="row btn-group btn-group-justified">
        {% for item in availableRecipeSteps %}
            <div class="col-md-{{ 12/loop.length}}">
                <a class="btn btn-default" style="white-space: normal;" href="{{ path('CookingAddRecipeItem', {'recipeItemId': item.id }) }}">{{ item.randomText }}</a>
            </div>
        {% endfor %}
    </div>
{% endif %}

{% endblock %}
