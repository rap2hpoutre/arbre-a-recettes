{% extends "Rap2hCookingBundle::layout.html.twig" %}

{% block title %}{{ parent() }} - Gestion des recettes{% endblock %}

{% block body %}


<table class="table table-striped">
	<thead>
		<tr>
			<th>#</th>
			<th>Titre</th>
			<th>Auteur</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		{% for recipe in recipes %}
			<tr>
				<td>{{ recipe.id }}</td>
				<td>{{ recipe.title }}</td>
				<td>{{ recipe.author }}</td>
				<td>
					<div class="btn-group">
						<a class="btn btn-sm btn-default" href="#todo">
							<span class="glyphicon glyphicon-pencil"></span> Modifier
						</a>
						<a class="btn btn-sm btn-default" href="{{ path('CookingAdminDeleteRecipe', {'recipeId': recipe.id }) }}">
							<span class="glyphicon glyphicon-remove"></span> Supprimer
						</a>
					</div>
				</td>
			</tr>
		{% endfor %}
	</tbody>
</table>

{% endblock %}